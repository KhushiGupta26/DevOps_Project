# Build stage for Node.js application
FROM node:16 as build-stage
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Production stage for serving with Nginx
FROM nginx:latest as production-stage
COPY --from=build-stage /app/dist /usr/share/nginx/html

# Configure Nginx to listen on all network interfaces for dynamic IP hosting
RUN sed -i 's/listen       80;/listen       0.0.0.0:80;/' /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

# Development stage for Node.js server
FROM node:16 as dev-stage
WORKDIR /home/node/app
COPY package*.json ./
RUN npm install
COPY . .
EXPOSE 3001
CMD ["npm", "start"]

# Jenkins stage
FROM jenkins/jenkins:lts as jenkins-stage

# Install Docker (optional, if Jenkins jobs require Docker CLI)
USER root
RUN apt-get update && apt-get install -y docker.io sudo

# Configure Jenkins to listen on all network interfaces
ENV JENKINS_OPTS="--httpListenAddress=0.0.0.0"

# Jenkins initial setup (optional plugins can be added here)
USER jenkins
RUN jenkins-plugin-cli --plugins "blueocean:1.27.4 workflow-aggregator:2.7"

# Expose Jenkins ports
EXPOSE 8080
EXPOSE 50000

CMD ["jenkins"]
